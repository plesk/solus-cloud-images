{
  "variables": {
    "user": "centos",
    "password": "centos",
    "disk_size": "7000",
    "output_directory": "output/cloudlinux",
    "output_image_name": "solus-io-cloudlinux-7-plesk"
  },
  "builders": [
    {
      "name": "solus.io",
      "vm_name": "{{user `output_image_name`}}.qcow2",
      "type": "qemu",
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "qemuargs": [
        [
          "-m",
          "2000m"
        ]
      ],
      "format": "qcow2",
      "headless": true,
      "accelerator": "kvm",
      "disk_size": "{{ user `disk_size` }}",
      "iso_url": "https://repo.cloudlinux.com/cloudlinux/7/iso/x86_64/CloudLinux-DVD-x86_64-7.9.iso",
      "iso_checksum": "a00f5cc21b645ac131c9beee94e641b0ef9b5702fbb9ecc3893e75a4ed82c3a1",
      "iso_checksum_type": "sha256",
      "output_directory": "{{user `output_directory`}}",
      "shutdown_command": "echo 'centos' | sudo -S /sbin/shutdown -hP now",
      "http_directory": "cloudlinux/http",
      "ssh_username": "{{ user `user` }}",
      "ssh_password": "{{ user `password` }}",
      "disk_compression": true,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 4444,
      "vnc_port_min": 5901,
      "vnc_port_max": 6000,
      "http_port_min": 8501,
      "http_port_max": 8501,
      "ssh_wait_timeout": "40m",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "vnc_bind_address": "0.0.0.0",
      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-cloudlinux-7.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "cloudlinux/files/rc.local",
      "destination": "/tmp/rc.local"
    },
    {
      "type": "file",
      "source": "cloudlinux/files/rc-local.conf",
      "destination": "/tmp/rc-local.conf"
    },
    {
      "type": "file",
      "source": "files/plesk/pleskswaprc",
      "destination": "/tmp/pleskswaprc"
    },
    {
      "type":  "shell",
      "execute_command": "echo | {{ .Vars }} sudo -S -E bash -xe '{{ .Path }}'",
      "script": "cloudlinux/scripts/packages-cloudlinux-7.sh"
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'",
      "script": "scripts/plesk/install_plesk.sh",
      "environment_vars": [
        "IS_SOLUS=true",
        "INSTALL_BYOL=true",
        "INSTALL_PLESK_VERSION=18.0.32",
        "INSTALL_PLESK_PRESET=Recommended",
        "INSTALL_WITH_PLESK_COMPONENTS=",
        "INSTALL_WITHOUT_PLESK_COMPONENTS=",
        "PLESK_TEMPORARY_LICENSE_KEY="
      ]
    },
    {
      "type": "file",
      "source": "build/revision",
      "destination": "/tmp/.image-revision"
    },
    {
      "type": "shell",
      "execute_command": "echo | {{ .Vars }} sudo -S -E bash -xe '{{ .Path }}'",
      "scripts": [
        "cloudlinux/scripts/post-install-cloudlinux.sh",
        "scripts/configure.sh",
        "scripts/plesk/configure.sh",
        "scripts/plesk/cleanup.sh"
      ]
    }
  ]
}
